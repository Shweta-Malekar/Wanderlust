<%layout("/layouts/boilerplate.ejs")%>

<div class="row">
     <h1 class="col-6 offset-3 mb-2 mt-2">Login on Wanderlust</h1>
    
         <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="col-6 offset-3 mt-3">

          <div class="mb-3">
            <label 
               for="username" 
               class="form-label">username</label>
            <input 
               type="text"
               name="username"
               id="username"
              class="form-control mb-2"
              required>
          </div>

  
          <div class="mb-3">
            <label 
               for="pass" 
               class="form-label">password</label>
            <input 
               type="password"
               name="password"
               id="pass"
              class="form-control mb-2"
              required>
          </div>
   </div>
        <button type="submit" class="btn btn-success offset-5 mt-3">Login</button>
      </form>
     </div> 
</div>